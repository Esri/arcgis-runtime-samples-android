<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/navigateRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/navigate_route"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/recenterButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/recenter"
        app:layout_constraintTop_toBottomOf="@+id/navigateRouteButton"
        app:layout_constraintStart_toStartOf="@+id/navigateRouteButton"
        app:layout_constraintEnd_toEndOf="@+id/navigateRouteButton"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/distanceRemainingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigateRouteButton"
        app:layout_constraintTop_toTopOf="@+id/navigateRouteButton" />

    <TextView
        android:id="@+id/timeRemainingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigateRouteButton"
        app:layout_constraintTop_toBottomOf="@+id/distanceRemainingTextView" />

    <TextView
        android:id="@+id/nextDirectionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigateRouteButton"
        app:layout_constraintTop_toBottomOf="@+id/timeRemainingTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
